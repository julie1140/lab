    <!-- Start Shop -->
    <section id="shop" class="section">
        <div class="container">
		    <div class="row margin-top-20 margin-bottom-80">
                <article class="col-md-12">
					<div class="section-head">
						<h2 class="heading">THE ORCHARD</h2>
                        <div class="divider-header"></div>
						<h4><span class="sub-heading light-gray">all the wonderful spots for cheap fruit</span></h4>
					</div>
				</article>
            </div>
			<div class="row">
                <div class="col-md-3 wow fadeInUp">
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Found By</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.user %></td>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>
<%= link_to 'PLANT SOME MORE', new_location_path %>
</h3>
